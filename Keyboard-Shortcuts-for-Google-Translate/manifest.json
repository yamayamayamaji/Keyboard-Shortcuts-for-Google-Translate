{
  "name": "Keyboard Shortcuts for Google Translate",

  "version": "1.1.0.0",

  "description": "You can set keyboard shortcuts in Google Translate page.",

  "background": {
    "persistent": false,
    "scripts": [
      "lib/underscore.min.js",
      "lib/underscore.deferred.min.js",
      "Extension.js",
      "background.js"
    ]
  },

  "content_scripts": [ {
    "all_frames": true,
    "matches": ["*://translate.google.com/*"],
    "js": ["content.js"]
  } ],

  "content_security_policy": "script-src 'self'; object-src 'none'; img-src 'self'",

  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },

  "manifest_version": 2,

  "page_action": {
    "default_icon": "images/icon-19.png",
    "default_title": "shortcut keys are enabled"
  },

  "permissions": [
    "*://translate.google.com/*",
    "tabs"
  ],

  "web_accessible_resources": [
    "content.css"
  ]
}
